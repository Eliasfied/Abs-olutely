// startet sobald page ge√∂ffnet wird
async function startWorkout() {

for (i = 0; i < exercises.length; i++) {
if (i == 0) {
await showWorkoutItem(i);
}
else {
await setTimeOut(showWorkoutItem(i, 30000));
}
await startBreakTimer();

}
}

async function showWorkoutItem(index) {

   currentExercise = exerciseArray[index];
   currentExerciseNumber = index + "/" + exerciseArray.length;
   await startExerciseTimer();
   


}

function startExerciseTimer() {
 counter = exerciseTime;
    while (counter > 0) {
    setInterval(counter--, 1000);

    }
}


function startBreakTimer() {
 counter = breakTime;
    while (counter > 0) {
    setInterval(counter--, 1000);

    }
}

